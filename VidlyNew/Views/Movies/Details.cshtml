@model VidlyNew.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.Name</li>
    <li>Release Date : @Model.ReleaseDate.ToLongDateString()</li>
    <li>Genre : @Model.DateAdded.ToLongDateString()</li>
    <li>Genre : @Model.NumberInStock</li>

</ul>

